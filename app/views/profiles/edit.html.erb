<h2>Profile edit</h2>

<%= form_with(model: @user, url: profile_path, method: :patch) do |f| %>
  <div class="form-group">
    <%= f.label :name, "Name" %>
    <%= f.text_field :name, class: "form-control" %>
    <%= f.file_field :photo %>
  </div>

  <%= f.submit "Update", class: "btn btn-primary" %>
<% end %>
