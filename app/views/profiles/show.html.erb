<%# banner %>
<div>
  <%= render "shared/banner_profile" %>
  <div class="d-flex justify-content-end">
    <% if @user == current_user %>
      <%= link_to "editar perfil", edit_user_registration_path, class: "btn btn-ghost mb-3" %>
    <% end %>
  </div>
</div>
<%# meus programas %>
<div class="profile-programs d-flex flex-column">
  <div class="profile-programs-title mb-4">
    <h3 class="m-0">my mentoring programs</h3>
  </div>
  <% if @user == current_user %>
    <% if current_user.programs.empty? %>
      <p class="mb-5">You haven't created any mentoring programs yet</p>
    <% else %>
      <div class="profile-programs-cards mb-5">
        <%= render "shared/card_small" %>
      </div>
    <% end %>
    <% else %>
      <div class="profile-programs-cards mb-5">
        <%= render "shared/card_small" %>
      </div>
  <% end %>
  <%# minhas inscrições %>
</div>
<% if @user == current_user %>
  <div class="profile-subscriptions d-flex flex-column">
    <div class="profile-subscriptions-title mb-4">
      <h3>my registrations</h3>
    </div>
    <% if current_user.mentorships.empty? %>
      <p>You haven't signed up for any mentoring programs yet</p>
    <% else %>
      <div class="profile-subscriptions-cards mb-5">
        <%= render "shared/card_mentorship" %>
      </div>
    <% end %>
  <% end %>
</div>
