<div class="search-container">
  <%= form_with(url: search_programs_path, method: :get, local: true) do |f| %>
    <%= f.text_field :query, placeholder: "procurar por programas", class: "search-input"%>
    <%= f.button :submit, class: "btn btn-ghost" do %>
      <i class="fas fa-search"></i>
    <% end %>
  <% end %>
</div>
