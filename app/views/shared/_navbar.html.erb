<div class="navbar navbar-expand navbar-light navbar-lewagon">
  <%= link_to "/", class: "navbar-brand" do %>
    <%= image_tag "logo.svg" %>
  <% end %>
  <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav me-auto">
      <% if user_signed_in? %>
        <li class="nav-item dropdown ">
          <% if current_user.photo.attached? %>
            <%= image_tag current_user.photo, class: "avatar-small dropdown-toggle cursor-pointer", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <%= image_tag "avatar.svg", class: "avatar-small dropdown-toggle cursor-pointer", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false  %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
            <%= link_to "my profile", profile_path(current_user), class: "dropdown-item" %>
            <%= link_to "edit my data", edit_user_registration_path, class: "dropdown-item" %>
            <%= link_to "I want to mentor", new_program_path, class: "dropdown-item" %>
            <%= link_to "exit", destroy_user_session_path, class: "dropdown-item", data: {turbo_method: :delete} %>
          </div>
        </li>
      <% elsif devise_controller? %>
      <% else %>
        <div class="d-flex">
          <%= link_to "I want to mentor", new_user_registration_path, class: "nav-link-secondary" %>
        </div>
        <div class="nav-item d-flex">
          <p class="nav-text">already have an account?</p>
          <%= link_to "login", new_user_session_path, class: "nav-link" %>
        </div>
      <% end %>
    </ul>
  </div>
</div>
