<%= form_with(model: program, class: "edit-form") do |f| %>
  <%= f.label :name, "name of the mentoring program" %>
  <%= f.text_field :name, class: "mb-4" %>
  <%= f.label :description, "program summary " %>
  <%= f.text_area :description, class: "text-area" %>
  <%= f.label :about, "program description " %>
  <%= f.text_area :about, class: "text-area" %>
  <div class="button-container"><%= f.submit "create", class: "mt-4 btn btn-flat" %></div>
<% end %>
